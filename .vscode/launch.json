    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "vscode-jest-tests",
        "args": ["--runInBand", "--no-coverage", "${file}"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    ]
}
